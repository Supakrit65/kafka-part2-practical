{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",              // ← required
    "moduleResolution": "NodeNext",    // ← compatible with Node ESM
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}